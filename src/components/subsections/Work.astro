---
interface Props {
    class?: string[];
    data: any;
}

const { data } = Astro.props;
---

<article>
    <header>
        <hgroup>
            <h3>{data.position}</h3>
            <h4>
                {
                    data.url ? (
                        <a
                            href={data.url}
                            title={data.name}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            {data.name}
                        </a>
                    ) : (
                        data.name
                    )
                }
            </h4>
        </hgroup>
        <p class="date">{data.startDate} - {data.endDate}</p>
    </header>
    <p>{data.summary}</p>
    <ul>
        {data.highlights.map((highlight: string) => <li>{highlight}</li>)}
    </ul>
</article>

<style lang="scss">
    article {
        margin-bottom: 5mm;

        header {
            margin-bottom: 2.5mm;

            h3,
            h4 {
                font-size: 12pt;
            }

            h3 {
                margin-bottom: 1.5mm;
            }

            h4 {
                font-weight: 200;
            }
            .date {
                font-size: 10pt;
                font-style: oblique;
            }
        }

        ul {
            padding-left: 6mm;
            & > li {
                margin-bottom: 1mm;
                list-style: disc;
            }
        }
    }
</style>
