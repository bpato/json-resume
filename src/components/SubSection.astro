---
interface Props {
    id?: string;
    title?: string;
}

const { id, title } = Astro.props;
---

<section {id}>
    {title && <h2>{title}</h2>}
    <slot />
</section>

<style lang="scss">
    section {
        margin-bottom: 5mm;

        h2 {
            font-size: 12pt;
            text-decoration: underline;
            text-transform: uppercase;
            margin-bottom: 2.5mm;
        }
    }
</style>
