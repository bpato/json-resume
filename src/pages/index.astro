---
import Layout from "@/layouts/Layout.astro";

import Basics from "@/components/sections/Basics.astro";
import About from "@/components/sections/About.astro";
import LContent from "@/components/sections/LContent.astro";
import RContent from "@/components/sections/RContent.astro";
---

<Layout title="Resume">
	<div id="cv1" class="dinA4">
		<Basics id="personal_data" />
		<About id="contact_info" />
		<LContent id="column_left" />
		<RContent id="column_right" />
	</div>
</Layout>

<style lang="scss">
	body {
		background-color: #2c404a;

		.dinA4 {
			background-color: white;
		}
	}

	// Centrar el contenido del documento en la ventana del navegador
	body {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;

		// 		Estructura del documento:
		//     _____________
		//     |           |
		//     |___________|
		//     |___________|
		//     |     |     |
		//     |     |     |
		//     |     |     |
		//     |     |     |
		//     |_____|_____|

		#cv1 {
			display: grid;
			grid-column-gap: 10mm;
			grid-template-columns: 1fr 1fr;
			grid-template-areas: "personal_data personal_data" "contact_info contact_info" "column_left column_right";
		}
	}

	// SIZES
	body {
		width: 100%;
		height: 100%;
		.dinA4 {
			width: 210mm;
			min-height: 297mm;
		}
	}

	@media screen {
		.dinA4 {
			margin-top: 10mm;
		}
	}
</style>
